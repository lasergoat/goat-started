{
  "name": "goat-started",
  "version": "1.0.0",
  "description": "a simple boilerplate for angular app with api running mongo",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "mkdir log",
    "serve:api": "nodemon ./api/index.js",
    "serve:api-silent": "nodemon ./api/index.js &> ./log/api.log &",
    "serve:public": "webpack-dev-server",
    "mongo:start": "mongod --port 27017 &> ./log/mongo.log &",
    "mongo:stop": "killall mongod",
    "prestart": "npm run mongo:start",
    "start": "npm run serve:api-silent && npm run serve:public",
    "stop": "npm run mongo:stop"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.6.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "express-livereload": "0.0.24",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.9.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "postcss-loader": "^0.8.1",
    "sass-loader": "^3.1.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "mongodb": "^2.1.7"
  }
}
